<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aliff.bookingsystemcomputerservice.BookingServiceMenu"
    >




    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:textSize="15dp"
        android:id="@+id/BtnBackBookingService"/>


    <Button
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Booking"
        android:id="@+id/chatroomCustomer"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Check Status Booking"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cancel Booking"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Notification of Payment "/>


</LinearLayout>
