<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aliff.bookingsystemcomputerservice.Booking_Service"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="10sp">


    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:textSize="15dp"
        android:id="@+id/BtnBackBookingService"/>


    <Button
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="New Booking"
        android:id="@+id/AddBookCustomer"/>

    <Button
        android:id="@+id/mBookings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Bookings"
        android:textSize="15dp" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cancel Booking"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Notification of Payment "/>


</LinearLayout>
